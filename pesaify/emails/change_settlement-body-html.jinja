{% extends "emails/base-body-html.jinja" %}

{% block body %}
    {% trans full_name=user.get_full_name(), url=resolve_url("pesaify-account-process-settlement" , settlement.token) %}
    <h2>Confirm Settlement Settings Change</h2>
    <p>Hello {{ full_name }}</p>
    <p>The settlement settings on your Pesaify account have been changed.</p>
    <a class="button" href="{{ url }}" title="Confirm Settlement">Confirm Settlement</a>
    <p>You can ignore this message if you did not request.</p>
    <p><small>We look forward to serving you</small></p>
    <p><small>Pesaify Team</small></p>
    {% endtrans %}
{% endblock %}
